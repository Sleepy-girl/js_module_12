{{#each this}}
<li class="card">
  <h1 class="title">{{name}}</h1>
  <div class="wrapper">
    <div class="country_info">
      <p class="item_desc"><span class="item_name">Capital:</span> {{capital}}</p>
      <p class="item_desc"><span class="item_name">Population:</span> {{population}}</p>
      <p class="item_desc"><span class="item_name">Languages:</span></p>
      <ul class="language_list">
        {{#each languages}}
        <li class="language_list_item">{{this.name}}</li>
        {{/each}}
      </ul>
    </div>
    <div>
      <img class="country_flag" src="{{flag}}" alt="{{nativeName}}" width="350">
    </div>
  </div>
</li>
{{/each}}